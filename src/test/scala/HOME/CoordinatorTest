package HOME

import org.scalatest.funsuite.AnyFunSuite

class CoordinatorTest{
  val controller: Controller = Controller()
  test("Basic coordinator with no devices"){
    assert(controller.getDevices().size == 0)
  }
  test("Adding and removing devices"){
    controller.addDevice(Device("Light","salotto"))
    assert(controller.getDevices().size == 1)
    controller.addDevice(Device("Light","salotto"))
    assert(controller.getDevices().size == 1)
    controller.removeDevice(Device("A","aa"))
    assert(controller.getDevices().size == 1)
    controller.removeDevice(Device("A","salotto"))
    assert(controller.getDevices().size == 0)
  }

}